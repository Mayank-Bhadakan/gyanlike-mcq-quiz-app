<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/forgotpass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.gyanlike.customs.CustomHeader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customHeader" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtchtitle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_marginTop="13dp"
            android:layout_marginStart="-10dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#D85B18A3">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/que"
            android:paddingVertical="15dp"
            android:hint="Question"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionContainer"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionA"
            android:text="OptionA"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/btn_option"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionB"
            android:text="OptionB"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/btn_option"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionC"
            android:text="OptionC"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/btn_option"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionD"
            android:text="OptionD"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/btn_option"
            android:textSize="18sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:layout_gravity="end"
        android:layout_marginVertical="25dp"
        android:layout_marginEnd="15dp"
        android:text="Next"
        android:textColor="#D85B18A3"
        android:enabled="false"
        android:alpha="0.3"
        android:textAllCaps="false"
        android:textSize="15sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>