<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/forgotpass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminSubjectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.example.gyanlike.customs.CustomHeader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customHeader" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSubTitle"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="13dp"
            android:textSize="22sp"
            tools:ignore="RtlSymmetry"
            android:layout_marginStart="-10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnaddSub"
            android:layout_below="@id/header"
            android:paddingStart="40dp"
            android:text="Add Subjects"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="40dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/addimg"
            android:src="@drawable/add1"
            android:layout_below="@id/header"
            android:layout_marginTop="12dp"
            android:layout_marginStart="50dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ASubList"
    tools:listitem="@layout/item_sub"
    android:layout_margin="10dp" />


</androidx.appcompat.widget.LinearLayoutCompat>